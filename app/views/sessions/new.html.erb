<%= provide(:title, t("sessions.login")) %>
<h1><%= t(".login")%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |form| %>

    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>

    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control" %>

    <%= form.label :remember_me, class: "checkbox inline" do %>
      <%= form.check_box :remember_me %>
      <span><%= t("sessions.remember") %></span>
    <% end %>

    <%= form.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p><%= t("sessions.new_user") %> <%= link_to t("sessions.sign_up"), signup_path %></p>
  </div>
</div>
